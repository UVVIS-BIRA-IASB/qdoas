{
    "version": 2,
    "configurePresets": [
        {
            "name": "vcpkgDebug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            }
        },
        {
            "name": "vcpkgRelease",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            }
        }
    ]
}
